{
    "name": "wcslight",
    "description": "WCS Javascript library.",
    "version": "1.1.1",
    "keywords": [
        "WCS",
        "WCS light",
        "lightweight WCS for browser"
    ],
    "author": "Fabrizio Giordano (fab77)",
    "license": "GPL-3.0-only",
    "homepage": "https://github.com/fab77/wcslight#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/fab77/wcslight.git"
    },
    "bugs": {
        "url": "https://github.com/fab77/wcslight/issues",
        "email": "fabriziogiordano77@gmail.com"
    },
    "type": "module",
    "exports": {
        ".": {
            "types": "./lib-esm/index.d.ts",
            "import": "./dist/wcslight.esm.js",
            "require": "./dist/wcslight.cjs"
        }
    },
    "module": "./dist/wcslight.esm.js",
    "main": "./dist/wcslight.cjs",
    "types": "./lib-esm/index.d.ts",
    
    "files": [
        "lib-esm/",
        "dist"
    ],
    "scripts": {
        "clean": "shx rm -rf dist lib-esm",
        "dev": "npm run clean && tsc && webpack --mode=development --watch --progress",
        "prod": "npm run clean && tsc && webpack --mode=production",
        "webtest": "cp dist/* webtest/; node server.cjs",
        "test:esm": "tsc -m es6 test.ts; node test.js"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "devDependencies": {
        "@types/node": "^18.19.76",
        "typescript": "^5.0.0",
        "webpack": "^5.0.0",
        "webpack-cli": "^5.0.0",
        "@tsconfig/node18": "^1.0.3",
        "ts-loader": "^9.0.0",
        "shx": "^0.3.4"
    },
    "dependencies": {
        "healpixjs": "^1.0.3",
        "jsfitsio": "^1.2.3"
    },
    "browser": {
        "fs": false,
        "node:fs/promises": false,
        "node:fs": false,
        "fs/promises": false,
        "process": false
    }
}