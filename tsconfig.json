{
  "compilerOptions": {
    "moduleResolution": "nodenext", // 'node16' or 'nodenext' for Node.jsâ€™ ECMAScript Module Support
    "module": "NodeNext",
    "target": "es6",  // Modern browsers support all ES6 features, so ES6 is a good choice. 
    "lib": ["es6", "dom"],
    "outDir": "lib-esm",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/**/*",
    "test/USE_CASE_1.integration.spec.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}